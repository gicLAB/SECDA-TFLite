{
  "name": "secda-tflite",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/working_dir/SECDA-TFLite/,type=bind,consistency=cached",
    // "source=VIVADO_2019_PATH,target=/working_dir/Vivado_2019/,type=bind,consistency=cached",
    // "source=VIVADO_2024_PATH,target=/working_dir/Vivado_2024/,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/working_dir/SECDA-TFLite",
  "postCreateCommand": "cd scripts && python3 ./update_config.py"
}