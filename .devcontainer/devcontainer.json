{
  "name": "secda-tflite",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USER_UID": "${localEnv:USER_UID:1000}",
      "USER_GID": "${localEnv:USER_GID:1000}",
      "USERNAME": "${localEnv:USER:vscode}",
      "WORKSPACE_PATH": "${localWorkspaceFolder}"
    }
  },
  "remoteUser": "${localEnv:USER:vscode}",
  "containerUser": "${localEnv:USER:vscode}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached"
  ],
  "workspaceFolder": "${localWorkspaceFolder}",
  "postCreateCommand": "sudo chown -R ${localEnv:USER:vscode}:${localEnv:USER:vscode} ${localWorkspaceFolder} && cd scripts && python3 ./update_config.py"
}